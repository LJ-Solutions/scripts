#! /bin/bash
# create a bash script from a string

function usage()
{
cat<<EOH
usage: scriptify [STRING]
create a bash script from STRING, or standard input, to standard output
EOH
}

if [ "$1" == '-h' ] || [ "$1" == '--help' ]; then
    usage; exit
fi

if [ -t 0 ] ; then
    # reading from terminal
    string=${*}
else
    # reading from stdin
    string=$(cat /dev/stdin)
fi
cat <<EOF
#! /bin/bash
# beware of the script!...
# script automatically generated by scriptify
#
# https://github.com/aurelien-rainone/scripts/blob/master/scriptify
${string}
EOF
